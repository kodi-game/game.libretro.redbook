<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.redbook"
		name="Redbook Audio Player"
		version="1.0.0.2"
		provider-name="Brad Parker">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>cue|bin</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>Apache 2.0</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.redbook</source>
		<summary lang="en_GB">Red Book</summary>
		<summary lang="fr_FR">Red Book</summary>
		<description lang="da_DK">Libretro-kerne til Red Book lydafspilning.</description>
		<description lang="de_DE">Libretro-Core für die Wiedergabe von Red Book Audio.</description>
		<description lang="en_GB">Libretro core for Red Book audio playback.</description>
		<description lang="es_ES">Núcleo Libretro para la reproducción de audio Red Book.</description>
		<description lang="fr_FR">Noyau Libretro pour la lecture audio Red Book.</description>
	</extension>
</addon>
